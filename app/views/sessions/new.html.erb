<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>
<nav>
  <div class="navbar-header"> 
    <%= link_to 'LinkedIn', root_path, class:"link-dark logo"  %>
  </div>
  <ul class="nav navbar-nav navbar-right">
      <li><a class="btn btn-outline-dark" href="sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
  </ul>
</nav>
<section class="card my-5 shadow  posi" style="background-color: rgb(3, 3, 53);">
  <div class="card-body">
    <h3 class="card-subtitle mb-3 text-white">Sign In</h3>
    <%= form_with url: sign_in_path do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "text-light" %>
        <%= form.text_field :email, class: "form-control" , placeholder: "sweta3.com"%> 
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "text-light" %>
        <%= form.password_field :password, class: "form-control" , placeholder: "sweta34"%>
        </div>
        <div class="mb-3">
        <%= link_to "Forgot your password?", password_reset_path %>
      </div>
      
      
      <div class="mb-3">
        <%= form.submit "Sign in" , class: "btn btn-primary" %>
      </div>
      <div class="mb-3">
      <%= link_to 'Login with LinkedIn', '/auth/linkedin', class: "btn btn-light" %>
      </div>
    <% end %>
  </div>
</section>

