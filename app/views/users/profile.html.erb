<% @user.user_accounts.each do |user_account| %>
  <section class="d-flex justify-content-between">
      <figure class="outer">
        <% if user_account.picture.attached? %>
          <%= image_tag user_account.picture.url  %>
        <% else %>
          <%= image_tag("https://h-o-m-e.org/wp-content/uploads/2022/04/Blank-Profile-Picture-3.jpg") %>
        <% end %>
      </figure>
        <div class="flexcol col1">
        <%= @user.job_navigations.count %>
        <h5>Posts</h5> 
        </div>
        <div class="flexcol col1">
        <%= @user.followers.count %>
        <% if @current_user.following?(@user) || @user.id == @current_user.id %>
        <h5> <%= link_to "Connections", follower_path(@user), class: "text-dark" %></h5>
         <% else %>
      <h5>Connections</h5>
     <% end %> 
        </div>
    </section>
  <section>
  <div class=" mb-3 text-dark">
    <%= user_account.orgganisation %>
  </div>
  <div class=" mb-3 text-dark">
    <%= user_account.bio %>
  </div>
  </section>
<% end %>

<% if @current_user.following?(@user) %>
  <%= button_to "Following", unfollow_path(@user), :onclick=> "return confirm('Are you sure, You want to unfollow?')" %>
    <% elsif @current_user.sent_follow_request_to?(@user)%>
       <%= button_to "Cancel follow request", cancel_path(@user) %>
    <% elsif @user.id == @current_user.id %>
    <h6> --- </h6> 
    <% else %>
      <%= button_to "Follow",  follow_path(@user) %><h6>Follow <%= @user.username %> to see their connections</h6>
<% end %>
<div>
<section class="wrapperjob">
<% @user.job_navigations.each do |job_navigation| %>

   <% pre_apply = job_navigation.applies.find {|apply| apply.user_id == @current_user.id} %>
    <% if job_navigation.is_approved == true  %> 
  
    <section class="card my-5 shadow " style="background-color: rgb(3, 3, 53);"> 
      <div class="card-body">
        <div class=" mb-3 text-light">
          <h5>JOB TITLE : </h5>
          <%= job_navigation.jobtitle%>
        </div>
        <div class=" mb-3 text-light">
          <h5>JOB DESCRIPTION :</h5>
          <%= job_navigation.jobdescription %>
        </div>
        <div class=" mb-3 text-light"> 
          <h5>NUMBER OF VACANCY :</h5>
          <%= job_navigation.novac %>
        </div>
        <div class=" mb-3 text-light">
          <h5>SKILL:</h5>
          <%= job_navigation.skill%>
        </div>
        <div class=" mb-3 text-light">
          <h5>JOB ROLE:</h5>
          <%= job_navigation.jobrole%>
        </div>
        <div class=" mb-3 text-light">
          <h5>JOB SECTOR:</h5>
          <%= job_navigation.jobsector%>
        </div>
        <p class=" mb-3 text-light"><%= job_navigation.likes.count %> <%= (job_navigation.likes.count) == 1 ? 'Like' : 'Likes' %></p>
          <% pre_like = job_navigation.likes.find {|like| like.user_id == @current_user.id} %>
            <% if pre_like %>
              <%= button_to 'Unlike', job_navigation_like_path(job_navigation, pre_like), method: :delete %>
            <% else %>
              <%= button_to 'Like', job_navigation_likes_path(job_navigation), method: :post %>
            <% end %>
          <%= link_to 'Apply&Review', job_navigation_path(job_navigation), class:"text-light"  %>
        </div>
    </section>  
<% end %>
<% end %>
</div>
</section>  

          

         