<div class="container">
  <table class="table table-bordered tablesize"> 
    <thead class="table-light">
      <tr><th colspan="4"><h3 class="text-center">List Of Users</h3></th> </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="table-light">
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td><%= user.id %></td>
          <td><%= link_to  user_delete_path(user) , method: :delete, :onclick=> "return confirm('Are you sure you want to delete this user?')" do %>
             <%= icon('fa fa-trash ') %>
            <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


