<div class="form-group msg-form">
  <%= form_with(model: [@single_room ,@chat], remote: true, class: "d-flex ", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
  <div class="chat-box flexrow2">  
  <%= f.text_field :content, id: 'chat-text', class: "form-control msg-content ", autocomplete: 'off' %>
    <%= f.submit "send", data: { disable_with: false }, class: "btn btn-primary" %> 
    </div>
  <% end %>
</div> 