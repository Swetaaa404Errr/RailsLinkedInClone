<%= form_with model: @user_account, :html => { :'data-ajax' => false } do |form| %>
  <%= form.hidden_field :user_id, value: @user_id %>
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>
  <section class="card my-5 shadow size card-background">
    <div class="card-body">
      <h3 class="card-subtitle mb-3 ">User Information Form</h3>
      <div class=" mb-3 ">
        <%= form.label :gmail, class: 'required' %>
        <%= form.text_field :gmail, class: "form-control" , placeholder: "Developer"%>
      </div>
      <div class=" mb-3 ">
        <%= form.label :username %>
        <%= form.text_field :username, class: "form-control" %>
      </div>
      <div class=" mb-3 ">
        <%= form.label :link%>
        <%= form.text_field :link, class: "form-control" %>
      </div>
      <div class=" mb-3 ">
        <%= form.label :qualification, class: 'required' %>
        <%= form.select :qualificatioon, ["BA", "B.Sc", "B.com" ,"B.Tech" , "BE"] %>
      </div>
      <div class=" mb-3 ">
        <%= form.label :experience, class: 'required' %>
        <%= form.select :experience, ["Fresher", "0-5", "5-10", "10-15" ,"15-20" , "20-25"] %>
      </div>
      <div class=" mb-3 ">
        <%= form.label :orgganisation, class:'inputt'%>
        <%= form.text_field :organisation, class: "form-control" %>
      </div>
      <div class=" mb-3 ">
        <%= form.label :skill %>
        <%= form.text_field :skill, class: "form-control" %>
      </div>
      <div class=" mb-3 ">
        <%= form.label :Bio %>
        <%= form.text_field :bio, class: "form-control" %>
      </div>
        <div class="field ">
         <h5 class= 'required' >job </h5>
        <%= label_tag 'job_developer', 'Developer' %>
        <%= check_box_tag 'user_account[job][]', 'Developer', checked('Developer'), id: 'job_developer' %>
        <%= label_tag 'job_webEngineer', 'WebEngineer' %>
        <%= check_box_tag 'user_account[job][]', 'WebEngineer', checked('WebEngineer'), id: 'job_webEngineer' %>
        <%= label_tag 'job_engineer', 'Engineer' %>
        <%= check_box_tag 'user_account[job][]', 'Engineer', checked('Engineer'), id: 'job_engineer' %>
        <%= label_tag 'job_receiptionist', 'Receiptionist' %>
        <%= check_box_tag 'user_account[job][]', 'Receiptionist', checked('Receiptionist'), id: 'job_receiptionist' %>
        <%= label_tag 'job_cook', 'Cook' %>
        <%= check_box_tag 'user_account[job][]', 'Cook', checked('Cook'), id: 'job_cook' %>
        <%= label_tag 'job_caretaker', 'Caretaker' %>
        <%= check_box_tag 'user_account[job][]', 'Caretaker', checked('Caretaker'), id: 'job_caretaker' %>
      </div>
      <div class="mb-3 navpic ">
        <%= form.label :picture, "Profile Picture" %> 
        <%=form.file_field :picture %>
          <% if @user_account.picture.attached? %>
            Current <%= image_tag @user_account.picture.url  %>
            <% else %>
            Attach Picture
          <% end %>
      </div>
      <div class="mb-3 ">
        <%= form.label :cv, "Upload Cv" %>
        <%=form.file_field :cv %>
        <% if @user_account.cv.attached? %>
            Current <%= link_to "Your CV", @user_account.cv.url , class:"link"%> 
            <% else %>
            Attach CV
            <% end %>
      </div> 
      <div class="mb-3 navpic">
        <%= form.label :certificate, class:"cv" %> 
        <%= form.file_field :certificate, multiple: true %> 
          <% if @user_account.certificate.attached? %>
            <% @user_account.certificate.each do |certificate| %>
              <%= image_tag certificate.url   %>
            <% end %>
          <% end %>
      </div>  
      <div class="mb-3  ">
        <%= form.label :notification %>
        <%= form.radio_button :notification, 'Yes' %> Yes <br/>
        <%= form.radio_button :notification, 'No' %> No <br/>
      </div>
    </div>
    <div class="d-flex text-center gap-3">
      <%= form.submit "Update" , class: "btn btn-primary" %>
    </div>
  </section>
<% end %>

   


    